<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#dedede"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:theme="@style/ToolbarTheme"
        android:background="@drawable/mau_nen_tool_bar">
        <RelativeLayout
            android:id="@+id/RL_tk"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:gravity="left|center"
                android:id="@+id/tv_tieu_de"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:textColor="#fff"
                android:hint="Giỏ hàng của tôi"
                android:singleLine="true" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="156dp"
        android:id="@+id/RV_gio_hang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/LL_tab_menu"
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="51dp">
        <TextView
            android:layout_weight="1"
            android:background="#07000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="99"
            android:background="#faf6ef"
            android:orientation="horizontal"
            android:weightSum="5">
            <LinearLayout
                android:id="@+id/LL_tab_Trang_Chu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="2dp"
                    android:layout_weight="9"
                    android:fontFamily="@font/ynn_e900"
                    android:gravity="center|bottom"
                    android:text="\ue900"
                    android:textColor="#9e9e9e"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="1"
                    android:gravity="top|center"
                    android:text="Trang chủ"
                    android:textAlignment="center"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_tab_Giam_gia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="9"
                    android:fontFamily="@font/giam_gia"
                    android:text="\ue900"
                    android:textColor="#9e9e9e"
                    android:textSize="27sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="1"
                    android:gravity="top|center"
                    android:text="Giảm giá"
                    android:textAlignment="center"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_tab_Danh_muc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:fontFamily="@font/font_icon_san_pham"
                    android:text="\ue6fd"
                    android:textColor="#9e9e9e"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="1"
                    android:gravity="top|center"
                    android:text="Danh mục"
                    android:textAlignment="center"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_tab_Gio_hang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:fontFamily="@font/font_icon_san_pham"
                    android:text="\ue72f"
                    android:textColor="#f57224"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="1"
                    android:gravity="top|center"
                    android:text="Giỏ hàng"
                    android:textAlignment="center"
                    android:textColor="#f57224"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_tab_Tai_khoan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:fontFamily="@font/font_icon_san_pham"
                    android:text="\ue61e"
                    android:textColor="#9e9e9e"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="1"
                    android:gravity="top|center"
                    android:text="Tài khoản"
                    android:textAlignment="center"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/TV_tien_hanh_thanh_toan"
        android:layout_above="@id/LL_tab_menu"
        android:gravity="center"
        android:textSize="20sp"
        android:text="TIẾN HÀNH THANH TOÁN"
        android:textColor="#ffffff"
        android:background="#f57224"
        android:layout_width="match_parent"
        android:layout_height="51dp" />
    <LinearLayout
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_above="@+id/TV_tien_hanh_thanh_toan"
        android:layout_width="wrap_content"
        android:layout_height="52dp">
        <TextView
            android:layout_weight="0.5"
            android:background="#e2e2e2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <RelativeLayout
            android:layout_weight="99.5"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="#4d4d4d"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Tổng cộng"
                android:layout_margin="3dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_tong_tien"
                android:textColor="#f57224"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="0 vnđ"
                android:layout_margin="3dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#979494"
                android:textSize="12sp"
                android:textStyle="italic"
                android:text="(Đã bao gồm thuế VAT)"
                android:layout_margin="3dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>