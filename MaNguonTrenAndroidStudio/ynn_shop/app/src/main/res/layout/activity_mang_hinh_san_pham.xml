<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.CoordinatorLayout
        android:background="#e9e7e7"
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="#ffffff"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <android.support.v7.widget.Toolbar
                    android:layout_gravity="top"
                    android:gravity="top"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_collapseMode="parallax"/>
                <android.support.v7.widget.Toolbar
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_collapseMode="parallax"
                    android:theme="@style/ToolbarTheme"
                    android:background="@drawable/mau_nen_tool_bar">
                    <RelativeLayout
                        android:id="@+id/RL_tk"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize">
                        <TextView
                            android:layout_toLeftOf="@+id/tv_search"
                            android:gravity="left|center"
                            android:id="@+id/tv_tieu_de"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="15sp"
                            android:background="@android:color/transparent"
                            android:textColor="#fff"
                            android:hint="Chi tiết sản phẩm"
                            android:singleLine="true" />
                        <TextView
                            android:textSize="20sp"
                            android:paddingHorizontal="10dp"
                            android:gravity="center"
                            android:id="@+id/tv_cart"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/font_icon_san_pham"
                            android:text="\ue72f"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/tv_search"
                            android:layout_toLeftOf="@+id/tv_cart"
                            android:textSize="20sp"
                            android:paddingHorizontal="10dp"
                            android:gravity="center"
                            android:text="\uE72E"
                            android:fontFamily="@font/tim_kiem"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>
                <LinearLayout
                    android:background="#faf6ef"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    app:layout_collapseMode="pin"
                    android:id="@+id/ll_thanh_tab"
                    android:weightSum="0"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:id="@+id/LL_TQ"
                        android:weightSum="100"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="30"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="#9e9e9e"
                            android:id="@+id/TV_TQ"
                            android:layout_weight="99"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="Tổng quan"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <TextView
                            android:id="@+id/TV_TQ_Line"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/LL_TTSP"
                        android:weightSum="100"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="40"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="#9e9e9e"
                            android:id="@+id/TV_TTSP"
                            android:layout_weight="99"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="Thông tin sản phẩm"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <TextView
                            android:id="@+id/TV_TTSP_Line"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/LL_DG"
                        android:weightSum="100"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="30"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="#9e9e9e"
                            android:id="@+id/TV_DG"
                            android:layout_weight="99"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="Đánh giá"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <TextView
                            android:id="@+id/TV_DG_Line"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
        <!--cho nay ne-->
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/NSV_mh_sp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/RL_diem_TQ"
                    android:layout_width="match_parent"
                    android:layout_height="350dp">
                    <android.support.v4.view.ViewPager
                        android:fitsSystemWindows="true"
                        android:background="#e9e7e7"
                        android:id="@+id/vp_slide_anh_san_pham"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </android.support.v4.view.ViewPager>

                    <TextView
                        android:id="@+id/TV_STT_anh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="15dp"
                        android:background="@drawable/lam_tron_textview"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:text="loading"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/TV_STT_Tim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/lam_tron_textview"
                        android:fontFamily="@font/font_icon_san_pham"
                        android:paddingBottom="3dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="3dp"
                        android:text="\ue798"
                        android:textColor="#ff0000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/TV_STT_Share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/TV_STT_anh"
                        android:layout_marginEnd="79dp"
                        android:background="@drawable/lam_tron_textview"
                        android:fontFamily="@font/font_icon_san_pham"
                        android:paddingBottom="3dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="3dp"
                        android:text="\ue68e"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/RL_diem_TQ_b"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
