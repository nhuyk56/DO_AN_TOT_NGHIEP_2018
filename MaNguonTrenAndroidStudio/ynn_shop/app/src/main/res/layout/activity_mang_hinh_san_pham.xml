                            android:textSize="15sp"
                            android:text="loading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/TV_sp_gia_ban_ra"
                            android:textColor="#f57224"
                            android:textSize="30sp"
                            android:text="loading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_sp_gia_cao"
                                android:textColor="#9e9e9e"
                                android:textSize="15sp"
                                android:text="loading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_sp_giam_pt"
                                android:textColor="#212121"
                                android:layout_marginLeft="5dp"
                                android:textSize="15sp"
                                android:text="loading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="17dp"
                                android:textColor="#ff0000"
                                android:fontFamily="@font/font_icon_san_pham"
                                android:text="\ue798"
                                android:layout_gravity="center"
                                android:layout_width="19dp"
                                android:layout_height="19dp" />

                            <TextView
                                android:id="@+id/tv_so_tim"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="5dp"
                                android:text="loading"
                                android:fontFamily="@font/opensanslight"
                                android:textColor="#afb3c2"
                                android:textSize="12sp"
                                android:textStyle="normal" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                android:id="@+id/mrb_sp_tb_sao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:stepSize="0.01"
                                android:numStars="5"
                                android:rating="3.5"
                                android:theme="@style/RatingBar"
                                style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small" />

                            <TextView
                                android:id="@+id/tv_dong_dssp_rv_so_sao"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="5dp"
                                android:text="loading"
                                android:fontFamily="@font/opensanslight"
                                android:textColor="#afb3c2"
                                android:textSize="12sp"
                                android:textStyle="normal" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/LL_dong_mh_sp_dg_chung_nhan_mua_hang"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/TV_sp_ic_vat"
                                android:textColor="#4caf50"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="\ue800"
                                android:fontFamily="@font/tick_not_tick"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />
                            <TextView
                                android:id="@+id/TV_sp_ten_vat"
                                android:textColor="#4caf50"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="Đã có VAT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/LL_dong_mh_sp_dg_sl_sp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="#9e9e9e"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="\ue840"
                                android:fontFamily="@font/kho"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />
                            <TextView
                                android:id="@+id/TV_sp_sl"
                                android:textColor="#9e9e9e"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="loading"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textColor="#9e9e9e"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="sản phẩm còn trong kho"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_diem_ttsp_d"
                    android:background="#ffffff"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginBottom="5dp"
                            android:textColor="#9e9e9e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Giới thiệu sản phẩm"
                            android:textSize="15sp" />
                        <WebView
                            android:id="@+id/wv_gtsp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </WebView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_diem_ttsp_c"
                    android:background="#ffffff"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginBottom="5dp"
                            android:textColor="#9e9e9e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Đặt tính sản phẩm"
                            android:textSize="15sp" />
                        <WebView
                            android:id="@+id/wv_ctsp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </WebView>
                    </LinearLayout>
                </LinearLayout>
                <!--thống kê-->
                <LinearLayout
                    android:id="@+id/LL_diem_danh_gia"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#9e9e9e"
                        android:textSize="15sp"
                        android:text="Nhận xét và đánh giá"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
