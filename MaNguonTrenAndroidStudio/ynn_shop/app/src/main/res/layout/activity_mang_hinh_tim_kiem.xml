<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cac_mang_hinh.mang_hinh_tim_kiem">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:theme="@style/ToolbarTheme"
        android:background="@drawable/mau_nen_tool_bar">
            <RelativeLayout
                android:id="@+id/RL_tk"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
                <EditText
                    android:layout_toLeftOf="@id/tv_x"
                    android:gravity="left|center"
                    android:id="@+id/et_nd_tk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:background="@android:color/transparent"
                    android:textColor="#fff"
                    android:hint="Tìm kiếm trên ynn_shop"
                    android:singleLine="true" />
                <TextView
                    android:layout_toLeftOf="@+id/tv_line"
                    android:id="@+id/tv_x"
                    android:gravity="center"
                    android:text="\uE72A"
                    android:fontFamily="@font/tim_kiem"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_marginVertical="10dp"
                    android:id="@+id/tv_line"
                    android:layout_toLeftOf="@id/tv_search"
                    android:background="#a6ffffff"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:textSize="30sp"
                    android:paddingHorizontal="20dp"
                    android:gravity="center"
                    android:id="@+id/tv_search"
                    android:layout_alignParentRight="true"
                    android:text="\uE72E"
                    android:fontFamily="@font/tim_kiem"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_gravity="end"
        android:id="@+id/rl_b"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
    <!--Lay out dung chung-->
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/RL_lsp_tong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!--địa bàn LSP-->
    <RelativeLayout
        android:id="@+id/RL_lsp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--Layout dành cho loại sản phẩm-->
        <RelativeLayout
            android:layout_marginBottom="10dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/lb_lstk"
                android:textColor="#404040"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Lịch sử tìm kiếm"
                android:textSize="15sp" />

            <TextView
                android:layout_width="41dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/iconfontcategory"
                android:gravity="center"
                android:padding="5dp"
                android:text="" />
            <TextView
                android:layout_below="@+id/lb_lstk"
                android:background="#56c2c2c2"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </RelativeLayout>
    </RelativeLayout>
    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/TCL_lstk"
        app:tag_ripple_duration="0"
        android:layout_below="@id/RL_lsp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="5dp"
        app:tag_cross_color="#ac9f9f9f"
        app:container_enable_drag="false"
        app:horizontal_interval="10dp"
        app:vertical_interval="10dp"
        app:tag_clickable="true"
        app:tag_theme="none"
        app:tag_enable_cross="true"
        app:tag_background_color="#eff0f5"
        app:tag_border_color="#ffffff"
        app:tag_ripple_color="#f57224"
        app:tag_text_color="#212121"
        app:container_border_color="#ffffff"
        app:container_background_color="#ffffff"/>
    </RelativeLayout>
    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
</LinearLayout>