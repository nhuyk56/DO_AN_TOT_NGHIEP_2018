<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:weightSum="10"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/text_sx"
            android:id="@+id/tv_dong_popup_sp_mhssp_ten_sx"
            android:text="ABC"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <io.ghyeok.stickyswitch.widget.StickySwitch
            android:id="@+id/ss_dong_popup_sp_mhssp_loai_sx"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            app:ss_animationDuration="600"
            app:ss_animationType="line"
            app:ss_iconPadding="10dp"
            app:ss_iconSize="10dp"
            app:ss_leftIcon="@drawable/sap_xep_giam"
            app:ss_rightIcon="@drawable/tang_dan"
            app:ss_selectedTextSize="9sp"
            app:ss_sliderBackgroundColor="#a3a3b3"
            app:ss_switchColor="#f89b64"
            app:ss_textColor="#ff0000"
            app:ss_textSize="9sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/drag"
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>
</LinearLayout>