<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cac_mang_hinh.man_hinh_tai_khoan">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:theme="@style/ToolbarTheme"
        android:background="@drawable/mau_nen_tool_bar">
        <RelativeLayout
            android:id="@+id/RL_tk"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:textSize="40sp"
                android:id="@+id/ic"
                android:textColor="#f57224"
                android:gravity="center"
                android:text="\ue900"
                android:fontFamily="@font/ynn_e900"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ic"
                android:gravity="left|center"
                android:id="@+id/tv_tieu_de"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:textColor="#fff"
                android:hint="Xin chào "
                android:singleLine="true" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/ll_thanh_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:background="#faf6ef"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="90"
        app:layout_collapseMode="pin">

        <LinearLayout
            android:id="@+id/LL_TTTK"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/TV_TTTK"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="99"
                android:gravity="center"
                android:text="Thông tin tài khoản"
                android:textAlignment="center"
                android:textColor="#9e9e9e" />

            <TextView
                android:id="@+id/TV_TTTK_Line"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_DHCT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/TV_DHCT"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="99"
                android:gravity="center"
                android:text="Đơn hàng của tôi"
                android:textAlignment="center"
                android:textColor="#9e9e9e" />

            <TextView
                android:id="@+id/TV_DHCT_Line"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_DSYT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/TV_DSYT"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="99"
                android:gravity="center"
                android:text="Danh sách yêu thích"
                android:textAlignment="center"
                android:textColor="#9e9e9e" />

            <TextView
                android:id="@+id/TV_DSYT_Line"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_thanh_menu"
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="51dp">
        <TextView
            android:layout_weight="1"
            android:background="#07000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="99"
            android:background="#faf6ef"
            android:orientation="horizontal"
            android:weightSum="5">
            <LinearLayout
                android:id="@+id/LL_tab_Trang_Chu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="2dp"
                    android:layout_weight="9"
                    android:fontFamily="@font/ynn_e900"
                    android:gravity="center|bottom"
                    android:text="\ue900"
                    android:textColor="#9e9e9e"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="1"
                    android:gravity="top|center"
                    android:text="Trang chủ"
                    android:textAlignment="center"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_tab_Giam_gia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="9"
                    android:fontFamily="@font/giam_gia"
                    android:text="\ue900"
                    android:textColor="#9e9e9e"
                    android:textSize="27sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="1"
                    android:gravity="top|center"
                    android:text="Giảm giá"
                    android:textAlignment="center"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_tab_Danh_muc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:fontFamily="@font/font_icon_san_pham"
                    android:text="\ue6fd"
                    android:textColor="#9e9e9e"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="1"
                    android:gravity="top|center"
                    android:text="Danh mục"
                    android:textAlignment="center"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_tab_Gio_hang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:fontFamily="@font/font_icon_san_pham"
                    android:text="\ue72f"
                    android:textColor="#9e9e9e"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="1"
                    android:gravity="top|center"
                    android:text="Giỏ hàng"
                    android:textAlignment="center"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_tab_Tai_khoan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:fontFamily="@font/font_icon_san_pham"
                    android:text="\ue61e"
                    android:textColor="#f57224"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="1"
                    android:gravity="top|center"
                    android:text="Tài khoản"
                    android:textAlignment="center"
                    android:textColor="#f57224"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView

        android:layout_below="@+id/ll_thanh_tab"
        android:layout_above="@+id/ll_thanh_menu"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/ff_noi_dung"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>