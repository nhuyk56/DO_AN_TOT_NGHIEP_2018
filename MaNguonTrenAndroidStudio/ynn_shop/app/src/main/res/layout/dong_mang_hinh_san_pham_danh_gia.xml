<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="10dp"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:layout_marginTop="5dp"
            android:id="@+id/MRB_dong_mh_sp_dg_so_sao_danh_gia"
            style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:numStars="5"
            android:rating="3.5"
            android:stepSize="1"
            android:theme="@style/RatingBar" />

        <TextView
            android:layout_toLeftOf="@+id/MRB_dong_mh_sp_dg_so_sao_danh_gia"
            android:id="@+id/TV_dong_mh_sp_dg_Tieu_de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Sản phẩm chất lượng"
            android:textColor="#212121"
            android:textSize="15sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/TV_dong_mh_sp_dg_ten_nguoi_va_thoi_gian"
        android:textColor="#9e9e9e"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:text="Nguyễn Như Ý. - 2 tháng trước"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/LL_dong_mh_sp_dg_chung_nhan_mua_hang"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/d_chung_nhan_da_mua_hang"
            android:src="@drawable/ic_chung_nhan_da_mua_hang"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/cn_dmh"
            android:textColor="#4caf50"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="Chứng nhận đã mua hàng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/TV_dong_mh_sp_dg_Noi_dung"
        android:textColor="#212121"
        android:text="Áo như hình, chất vải đẹp mịn mát, đường may nói chung là ổn"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>