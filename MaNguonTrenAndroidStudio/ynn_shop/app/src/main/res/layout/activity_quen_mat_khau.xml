<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#b4eaeaea"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cac_mang_hinh.quen_mat_khau">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:theme="@style/ToolbarTheme"
        android:background="@drawable/mau_nen_tool_bar">
        <RelativeLayout
            android:id="@+id/RL_tk"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:gravity="left|center"
                android:id="@+id/tv_tieu_de"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:textColor="#fff"
                android:hint="Quên mật khẩu"
                android:singleLine="true" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
<LinearLayout
    android:background="#ffffff"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#5b5b5b"
        android:textSize="15sp"
        android:text="Vui lòng nhập địa chỉ email của bạn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_email"
            android:hint="Địa chỉ email"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/TV_khoi_phuc"
        android:gravity="center"
        android:textSize="20sp"
        android:text="KHÔI PHỤC MẬT KHẨU"
        android:textColor="#ffffff"
        android:background="#f57224"
        android:layout_width="match_parent"
        android:layout_height="51dp" />
</LinearLayout>
</LinearLayout>