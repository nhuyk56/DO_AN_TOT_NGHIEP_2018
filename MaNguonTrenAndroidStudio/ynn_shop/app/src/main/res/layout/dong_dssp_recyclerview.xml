<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="10dp"
    android:background="#ffffff"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/iv_dong_dssp_rv_anh_sp"
    android:adjustViewBounds="true"
    android:src="@drawable/anh_sp"
    android:layout_width="match_parent"
    android:layout_height="150dp" />
    <TextView
        android:id="@+id/tv_dong_dssp_rv_ten_sp"
        android:textSize="12sp"
        android:padding="5dp"
        android:fontFamily="@font/opensanssemibold"
        android:textStyle="bold"
        android:text="Máy quay phim cầm tay ELITEK HD Digital VIDEO 16X + Túi chống nước bất kì"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_dong_dssp_rv_gia_ban_ra"
        android:textColor="#f48644"
        android:text="333.375.000 đ"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_dong_dssp_rv_gia_cao"
            android:textColor="#afb3c2"
            android:text="333.375.000 đ"
            android:textStyle="bold"
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_dong_dssp_rv_phan_tram"
            android:paddingLeft="5dp"
            android:textColor="#afb3c2"
            android:text="-50%"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_tim_hong"
            android:layout_width="19dp"
            android:layout_height="19dp" />

        <TextView
            android:id="@+id/tv_dong_dssp_rv_so_tim"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:text="(100)"
            android:fontFamily="@font/opensanslight"
            android:textColor="#afb3c2"
            android:textSize="12sp"
            android:textStyle="normal" />
    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/RB_dong_dssp_rv_sao"
            android:numStars="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="0.01"
            android:rating="0"
            android:theme="@style/RatingBar"
            style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small" />

        <TextView
            android:id="@+id/tv_dong_dssp_rv_so_sao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:text="(4.4)"
            android:fontFamily="@font/opensanslight"
            android:textColor="#afb3c2"
            android:textSize="12sp"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>