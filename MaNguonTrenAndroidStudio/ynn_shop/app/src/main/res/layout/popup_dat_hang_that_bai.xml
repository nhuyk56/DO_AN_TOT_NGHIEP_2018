<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#ffffff"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--<TextView-->
        <!--android:text="\uE803"-->
        <!--android:fontFamily="@font/dh_tc_tb"-->
        <!--android:textSize="100sp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
        <TextView
            android:layout_marginTop="50dp"
            android:textColor="#c24f32"
            android:text="\uE803"
            android:fontFamily="@font/dh_tc_tb"
            android:textSize="100sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#d48976"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Xin thứ lỗi! Đơn hàng của bạn không được tiếp nhận với lý do sau đây"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_ly_do_that_bai"
                android:textColor="#494949"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Mã giảm giá của bạn đã hết thời gian sử dụng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_chinh_sua_don_hang"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="#f57224"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Chỉnh sửa đơn hàng"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</RelativeLayout>