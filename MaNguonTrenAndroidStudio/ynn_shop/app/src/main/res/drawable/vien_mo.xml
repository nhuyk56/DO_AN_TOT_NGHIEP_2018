<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="0dp">
                <shape>
                    <solid android:color="#ffffff" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item
                android:right="0dp"
                android:left="0dp"
                >
                <shape>
                    <solid android:color="#e9e7e7" />
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item
                android:bottom="5dp">
                <shape>
                    <solid android:color="#ffffff" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>