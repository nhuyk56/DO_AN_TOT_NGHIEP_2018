<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary: Màu chữ Tiêu đề  -->
        <item name="android:textColorPrimary">#fff</item>
        <!-- actionMenuTextColor: Màu chữ Menu  -->
        <item name="actionMenuTextColor">#111</item>
        <!-- Tints -->
        <item name="colorAccent">#a13636</item>
        <!-- Màu áp dụng cho các View ở trạng thái bình thường -->
        <item name="colorControlNormal">#d9cfcf</item>
        <!-- Màu View đang hoạt động -->
        <item name="colorControlActivated">#934848</item>
        <!-- Highlight (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">#111</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">15sp</item>
        <item name="android:maxWidth">10000dp</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
    </style>
    <style name="Toolbar.TitleText"
        parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/holo_orange_light</item>
    </style>
    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#85fabb96</item>
        <item name="colorButtonNormal">#b168cbe4</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#e9e9e9</item>
        <item name="colorControlHighlight">#e9e9e9</item>
        <item name="colorControlActivated">#f5a623</item>
    </style>
    <style name="processBarHorizantal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorControlNormal">#929392</item>
        <item name="colorControlActivated">#f5a623</item>
    </style>
</resources>
